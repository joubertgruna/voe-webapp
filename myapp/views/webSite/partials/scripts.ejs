<script>
    function transformarTextoParaHTML() {
        var descricaoElement = document.getElementById('descricao');
        var descricaoTexto = descricaoElement.innerText;
        var descricaoHTML = descricaoTexto.replace(/\n/g, '<br>');
        descricaoElement.innerHTML = descricaoHTML;
    }
    document.addEventListener('DOMContentLoaded', function () {
        transformarTextoParaHTML();
    });

    function validateForm() {
        let isValid = true;

        const formElements = document.querySelectorAll('.form-control, .form-group select, .form-group textarea, .form-group input[type="file"]');
        formElements.forEach(element => {
            const errorElement = document.getElementById(element.name + '-error');
            if (element.type === 'file') {
                if (!element.files.length) {
                    errorElement.textContent = 'Este campo é obrigatório.';
                    isValid = false;
                } else {
                    errorElement.textContent = '';
                }
            } else if (element.value.trim() === '') {
                errorElement.textContent = 'Este campo é obrigatório.';
                isValid = false;
            } else {
                errorElement.textContent = '';
            }
        });

        return isValid;
    }

    document.getElementById('comment-form').addEventListener('submit', function (event) {
        if (!validateForm()) {
            event.preventDefault(); // Impede o envio do formulário se não for válido
        }
    });


</script>
