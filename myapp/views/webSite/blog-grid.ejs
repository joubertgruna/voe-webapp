<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="voe,empresa de RH,treinamento">
  
  <meta name="author" content="https://instagram.com/joubertgruna">

	<title>VOE | Blog </title>

	<!-- bootstrap.min css -->
	<link rel="stylesheet" href="../webSite/plugins/bootstrap/css/bootstrap.min.css">
	<!-- Icon Font Css -->
	<link rel="stylesheet" href="../webSite/plugins/themify/css/themify-icons.css">
	<link rel="stylesheet" href="../webSite/plugins/fontawesome/css/all.css">
	<link rel="stylesheet" href="../webSite/plugins/magnific-popup/dist/magnific-popup.css">
	<!-- Owl Carousel CSS -->
	<link rel="stylesheet" href="../webSite/plugins/slick-carousel/slick/slick.css">
	<link rel="stylesheet" href="../webSite/plugins/slick-carousel/slick/slick-theme.css">

	<!-- Main Stylesheet -->
	<link rel="stylesheet" href="../webSite/css/style.css">

</head>

<body>

	<!-- Header Start -->

	<%- include('./partials/header')%>

		<!-- Header Close -->

		<div class="main-wrapper ">
			<section class="page-title bg-1">
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<div class="block text-center">
								<span class="text-white">Nosso Blog</span>
								<h1 class="text-capitalize mb-4 text-lg">Artigos de blog</h1>
								<ul class="list-inline">
									<li class="list-inline-item"><a href="/" class="text-white">Home</a></li>
									<li class="list-inline-item"><span class="text-white">/</span></li>
									<li class="list-inline-item"><a href="/blog" class="text-white-50">Nosso Blog</a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</section>

			<section class="section blog-wrap bg-gray">
				<div class="container">
					<div class="row">
						<% postagens.forEach((postagens)=>{ %>
						<div class="col-lg-6 col-md-6 mb-5">
							<div class="blog-item">
								<img src="../webSite/images/blog/2.jpg" alt="" class="img-fluid rounded">
								<div class="blog-item-content bg-white p-5">
									<div class="blog-item-meta bg-gray py-1 px-2">
										<span class="text-muted text-capitalize mr-3"><i
												class="ti-pencil-alt mr-2"></i><%=postagens.categoria%></span>
										<span class="text-black text-capitalize mr-3"><i class="ti-time mr-1"></i><%=postagens.created_at%></span>
									</div>
									<h3 class="mt-3 mb-3"><a href="/blog-single"><%=postagens.titulo%></a></h3>
									<a href="/blog-single/<%=postagens.id%>" class="btn btn-small btn-main btn-round-full">Artigo completo</a>
								</div>
							</div>
						</div>
						<% }); %>
					</div>

					<div class="row justify-content-center mt-5">
						<div class="col-lg-6 text-center">
							<nav class="navigation pagination d-inline-block">
								<div class="nav-links">
									<a class="prev page-numbers" href="#">Prev</a>
									<span aria-current="page" class="page-numbers current">1</span>
									<a class="page-numbers" href="#">2</a>
									<a class="next page-numbers" href="#">Next</a>
								</div>
							</nav>
						</div>
					</div>
				</div>
			</section>

			<!-- footer Start -->
			<%- include('./partials/footer')%>

		</div>

		<!-- 
    Essential Scripts
    =====================================-->

		<%- include('./partials/scripts')%>


</body>

</html>